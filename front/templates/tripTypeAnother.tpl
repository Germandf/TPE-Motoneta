<div class="form-group">
    <div class="row">
        <div class="col-md-6 mb-2">
            <p class="mb-1">Franja Horaria</p>
            <div class="form-check">
                <input id="time-zone-9-12" class="form-check-input" type="radio" name="time-zone" value="9-12" checked>
                <label for="time-zone-9-12" class="form-check-label">9 a 12 hs</label>
            </div>
            <div class="form-check">
                <input id="time-zone-13-17" class="form-check-input" type="radio" name="time-zone" value="13-17">
                <label for="time-zone-13-17" class="form-check-label">13 a 17 hs</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <p class="mb-1">Volumen de los materiales</p>
            <div class="form-check">
                <input id="materials-volume-box" class="form-check-input" type="radio" name="materials-volume" value="box" checked>
                <label for="materials-volume-box" class="form-check-label">Entra en una caja</label>
            </div>
            <div class="form-check">
                <input id="materials-volume-car" class="form-check-input" type="radio" name="materials-volume" value="car">
                <label for="materials-volume-car" class="form-check-label">Entra en el baúl de un auto</label>
            </div>
            <div class="form-check">
                <input id="materials-volume-van" class="form-check-input" type="radio" name="materials-volume" value="van">
                <label for="materials-volume-van" class="form-check-label">Entra en la caja de una camioneta</label>
            </div>
            <div class="form-check">
                <input id="materials-volume-truck" class="form-check-input" type="radio" name="materials-volume" value="truck">
                <label for="materials-volume-truck" class="form-check-label">Es necesario un camión</label>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</div>